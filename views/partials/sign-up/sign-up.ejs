<!-- ==================== SIGN UP ==================== -->
<section class="signup section" id="signup">
    <div class="container">
        <div class="signup_container grid">
            <article class="signup_card">
                <form id="signupForm" class="signup_form">
                    <div class="signup_field">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" required>
                    </div>
                    <div class="signup_field">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" required>
                    </div>
                    <div class="signup_actions">
                        <button type="submit" class="signup_button">Sign Up</button>
                        <a href="/login" class="signup_link">Already have an account? Log in</a>
                    </div>
                </form>
            </article>
        </div>
    </div>
</section>

<!-- Import Firebase Initialization JavaScript Module -->
<script type="module" src="/js/firebase-init.js"></script>